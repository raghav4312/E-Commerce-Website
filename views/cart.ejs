<%include header.ejs%>
<div class="container">
  <%if(data.length>0){%>
  <div class="d-flex flex-wrap justify-content-center" id="cartDiv">
    <% for(let i=0; i < data.length; i++) { %>
      <%if(data[i].isActive==true){%>
      <div class="card" id='<%= data[i]._id %>' style="width:250px;margin:10px;">
        <div class="card-body">
          <h5 class="card-title Name"><%=data[i].name %></h5>
          <p class="card-text Desc"><span class="font-weight-bold">Desc: </span><%=data[i].desc %></p>
            <span class="font-weight-bold">
              Price: <p class="card-text Price" style="display: inline-block"><%=data[i].price %></p>
          </span>
        </div>
        <div class="d-flex flex-row justify-content-around">
            <div class="input-group mb-3 mx-3">
              <div class="input-group-prepend">
                  <button class="btn btn-outline-danger border-danger minusBtn" type="button"><strong>-</strong></button>
              </div>
              <input type="text" class="form-control cartCheck w-25" min="0" value=<%= data[i].quantity %>>
              <div class="input-group-append">
                  <button class="btn btn-outline-success border-success plusBtn" type="button">+</button>
              </div>
            </div>
        </div>
      </div>
      <%}%>
      <% } %>
    </div>
    <div class="checkOutDiv d-flex justify-content-center">
        <button type="button" id="checkOutBtn" class="btn text-white bg-info mb-3 mt-3 w-50">Check Out</button>
      </div>
    <%}else{%>
      <img src="/emptyCart.png" alt="">
    <%}%>
    <div class="continueShoppingDiv d-flex justify-content-center">
      <button type="button" id="continueShoppingBtn" class="btn text-white w-50 bg-dark mb-3">Continue Shopping</button>
    </div>
</div>
<%include footer.ejs%>