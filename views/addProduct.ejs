<% include header.ejs%>
<div class="container">
  <div style="max-width: 750px;margin: 50px auto;" class="bg-light p-5">
    <h2 class="text-center m-4">Add Product form</h2>
    <form action="/prod/addProduct" method="post">
      <input type="text" name="name" placeholder="Enter the name of the Product" class="form-control" required><br>
      <input type="text" class="form-control" name="desc" id="" placeholder="Enter the description" required><br>
      <input type="number" name="quan" id="" class="form-control" min="1" placeholder="Enter the Quantity" required><br>
      <input type="number" name="price" id="" min="1" class="form-control" placeholder="Enter the price" required><br>
      <input type="submit" class="form-control btn btn-info" value="Add Product">
    </form>
    <form action="/products" method="GET">
      <input type="submit" value="Cancel" class="btnCancel form-control btn btn-danger mt-3">
    </form>
  </div>  
</div>

